<%= form_with model: @item, local: true, class: "item_form" do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <%= f.label(:type) %>
  <%= f.select(:itype, options_for_select(itypes_options, @item.itype)) %>
  <%= f.label(:le, "Limited Edition?") %>
  <%= f.check_box(:le) %><br>
  <small>Stats will not be saved if it's not a type: weapon, base, or charm.</small>
  <br>
  <% if @item.weapon_item? %>
    <%= f.label(:power_type) %>
    <%= f.select(:power_type, options_for_select(power_types_options, @item.power_type)) %><br>
  <% end %>
  <%= f.label(:power) %>
  <%= f.number_field(:power, min: 1, step: 1) %><br>
  <%= f.label(:p_bonus, "Power bonus") %>
  <%= f.number_field(:p_bonus, min: 0, step: 1) %>%<br>
  <%= f.label(:attr_bonus) %>
  <%= f.number_field(:attr_bonus, min: 0, step: 1) %>%<br>
  <%= f.label(:luck) %>
  <%= f.number_field(:luck, min: 0, step: 1) %><br>
  <%= f.label(:cheese_effect) %>
  <%= f.select(:cheese_effect, options_for_select(cheese_effects_options, @item.cheese_effect)) %>
  <br>
  <br>
  <%= f.submit %>
<% end %>