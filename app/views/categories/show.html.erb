<h2><%= @category.name %></h2>

<h4>This is everything listed under <%= @category.name %> so far:</h4>
<ul>
<% if @items.kind_of?(Array) %>
  <% @items.each do |item| %>
    <li><%= link_to  item.name, item_path(item) %></li>
  <% end %>
<% elsif @items %>
  <%= link_to  @items.name, item_path(@items) %>
<% end %>
</ul>
<br>
<br>
<%= link_to  "Back to items", items_path %>
<%= link_to  "Take me to Home", root_path %>